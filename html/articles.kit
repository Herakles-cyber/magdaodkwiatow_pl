        // search.addEventListener('keyup', searchEngine)

        const search = document.querySelector('.search');
        const h2 = document.querySelectorAll('.article-info h2');
        const articlesContainer = document.getElementById('articles-container');
        const errorText = document.createElement('p');

        errorText.className = 'error-text text-danger mt-2';
        errorText.style.display = 'none';

        articlesContainer.parentElement.appendChild(errorText);

        const searchEngine = e => {
            const text = e.target.value.toLowerCase();
            let found = false; // Zmienna wskazująca, czy znaleziono artykuł

            h2.forEach(el => {
                const articleContainer = el.parentElement.parentElement;
                if (el.textContent.toLowerCase().indexOf(text) !== -1) {
                    articleContainer.style.display = 'flex';
                    found = true;
                } else {
                    articleContainer.style.display = 'none';
                }
            });

            // Wyświetlanie komunikatu błędu w przypadku braku dopasowania
            errorText.style.display = found ? 'none' : 'block';
            errorText.textContent = 'Brak artykułu o podanej nazwie.';
        };

        search.addEventListener('input', searchEngine);
    </script>

